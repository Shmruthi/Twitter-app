<%= form_for @comment do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
<%=  f.hidden_field :msg_id %>
  <div class="field">
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>

